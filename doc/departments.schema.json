{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://tuxcraft.de/shiftplanner/volunteers.schema.json",
    "title": "Department List",
    "description": "A list of departments for the shiftplanner system",
    "type": "object",
    "properties": {
        "departments": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "The unique identifier for a department",
                        "type": "integer"
                    },
                    "name": {
                        "description": "The name of a department",
                        "type": "string"
                    }
                },
                "required": ["id", "name"]
            }
        }
    }
}

